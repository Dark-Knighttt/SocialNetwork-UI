#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import ReelCard libs.components.reel_card.ReelCard
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
<ReelPage>:
    name: 'reel'
    md_bg_color: get_color_from_hex("000000")
    ScreenManager:
        id: screen_manager
        transition: FadeTransition()

    

    BoxLayout:
        orientation: 'vertical'
        
        ScrollView:
            bar_width: 0

            MDBoxLayout:
                id: reels_container
                orientation: 'vertical'
                adaptive_height: True
                spacing: dp(10)
                padding: dp(10)

    MDFloatLayout:
        BottomNav:
            avatar : root.profile_picture
            

        SideNav:

        TopNav:
        
