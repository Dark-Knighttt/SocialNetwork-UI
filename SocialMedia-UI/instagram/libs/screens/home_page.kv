#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import StoryCreator libs.components.story_creator.StoryCreator
#:import BottomNav libs.components.bottom_nav.BottomNav
#:import CircularAvatarImage libs.components.circular_avatar_image.CircularAvatarImage
#:import PostCard libs.components.post_card.PostCard

<HomePage>:

    name : 'home'
    md_bg_color: get_color_from_hex("FFFFFF")

    MDBoxLayout:
        orientation: 'vertical'


        AppBar:

        MDBoxLayout:
            ScrollView:
                bar_width: 0

                MDBoxLayout:
                    adaptive_height: True

                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        id: timeline

                        # Stories
                        ScrollView:
                            size_hint_y : None
                            height: 110
                            bar_width: 0

                            MDBoxLayout:
                                adaptive_width: True
                                spacing: 5
                                padding: 5

                                #story creator
                                StoryCreator:
                                    avatar: root.profile_picture

                                MDBoxLayout:
                                    id: stories
                                    adaptive_width: True
                                    padding:5
                                    spacing:5
                                    

                        


        # Bottom seperation bar
        BottomNav:
            avatar : root.profile_picture
        





