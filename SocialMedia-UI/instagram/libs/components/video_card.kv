<VideoCard>:
    MDBoxLayout:
        orientation:'vertical'
        height:root.height
        width:root.width
        padding_y : 10

        VideoPlayer:
            source: root.video
            state: 'play'
            options: {'eos': 'loop'}
            allow_stretch: True
            keep_ratio: False
            size_hint:(1,1)
            # width: root.width*0.9
            # height: 720
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            background_color: get_color_from_hex("000000")
            anchor_x: 'center'
            anchor_y: 'center'
            MDBoxLayout:
                orientation: 'vertical'
                pos_hint: {'x':0, 'y':1}
                size_hint_y: None
                width: root.width * 0.9